package com.java.core;

class Employee{
	  // declare the variables
	  int emp_id = 101;
	  String emp_name = "Mayank";
	  static String  companyName = "Wipro";
	  
	// create function
	// modifiers + returnType + name og method/function + parameter
	   public void showEmpDetails(){
	      
	    System.out.println("emp id" +emp_id);
	    System.out.println("emp name" +emp_name);
	}
	   //create a static method
	    public static void show_company_name() {
	    	System.out.println(companyName);
	    }
	   
	  // Calling main method
	 public static void main(String args[]) {
		 Employee.show_company_name();
	   // creating the object 
	    Employee employee = new Employee();
	   // calling the method
	    employee.showEmpDetails();
	    

	  }
	  
	}